{
  "name": "tatler-client",
  "version": "1.0.0",
  "description": "Client for tatler.ekruglov.com notification service",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run build && mocha",
    "lint": "standardx './src/**/*.ts' './test/**/*.ts'",
    "releaseit": "release-it --ci",
    "pre-commit": "npm test && npm run lint && npm audit --prod",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "npm run pre-commit"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nordluf/tatler-client.git"
  },
  "keywords": [
    "notifications",
    "telegram"
  ],
  "author": "Evgeny Kruglov",
  "license": "JSON",
  "bugs": {
    "url": "https://github.com/nordluf/tatler-client/issues"
  },
  "homepage": "https://github.com/nordluf/tatler-client#readme",
  "devDependencies": {
    "express": "^4.17.1",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@release-it/bumper": "^1.1.1",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/debug": "^4.1.5",
    "@types/node": "^12.12.47",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.5",
    "mocha": "^7.0.0",
    "release-it": "^13.0.0",
    "standardx": "^5.0.0",
    "typescript": "^3.9.5"
  },
  "files": [
    "dist/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
