{
  "name": "tatler-client",
  "version": "1.0.0",
  "description": "Client for tatler.ekruglov.com notification service",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run build && mocha",
    "lint": "semistandard './**/*.ts' './test/**/*.js'",
    "releaseit": "release-it --ci",
    "pre-commit": "npm test && npm run lint && npm audit --prod",
    "clean": "rm -rf ./dist",
    "build": "npm run clean && tsc"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "npm run pre-commit"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nordluf/tatler-client.git"
  },
  "keywords": [
    "notifications",
    "telegram"
  ],
  "author": "Evgeny Kruglov",
  "license": "JSON",
  "bugs": {
    "url": "https://github.com/nordluf/tatler-client/issues"
  },
  "homepage": "https://github.com/nordluf/tatler-client#readme",
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@release-it/bumper": "3.0.0",
    "@release-it/conventional-changelog": "^3.0.0",
    "@types/debug": "^4.1.7",
    "@types/node": "^12.20.37",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "husky": "^4.3.8",
    "mocha": "^7.0.0",
    "release-it": "^14.0.0",
    "semistandard": "^16.0.0",
    "typescript": "^3.9.10"
  },
  "files": [
    "dist/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "semistandard": {
    "env": [
      "mocha"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
